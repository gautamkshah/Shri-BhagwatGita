<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="2.60dp"
    android:focusable="true"
    app:cardCornerRadius="6.50dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="6.50dp"
            android:background="@drawable/chapter_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"

                >


              <ImageView

                  android:layout_width="26dp"
                  android:layout_height="26dp"
                  android:src="@drawable/baseline_edit_note_24"
                  android:layout_weight="0.1"
                  app:tint="@color/splash" />

                    <TextView

                        android:id="@+id/tvVersenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="verse 1"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2.8"
                        android:textColor="@color/splash"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        />

                <ImageView

                    android:id="@+id/ivNext"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/baseline_keyboard_double_arrow_right_24"
                    android:layout_weight="0.1"
                    app:tint="@color/splash" />

                </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/tvVerse"
                android:text="Samcksc vlks vlksn klsj nvlslkvn svjks vlskjv slvjk sv amcksc vlks vlksn klsj nvlslkvn svjks vlskjv slvjk s amcksc vlks vlksn klsj nvlslkvn svjks vlskjv slvjk s amcksc vlks vlksn klsj nvlslkvn svjks vlskjv slvjk s amcksc vlks vlksn klsj nvlslkvn svjks vlskjv slvjk s amcksc vlks vlksn klsj nvlslkvn svjks vlskjv slvjk s vamcksc vlks vlksn klsj nvlslkvn svjks vlskjv slvjk s "
                android:textColor="@color/black"
                android:layout_weight="2"
                android:layout_margin="4dp"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="78.50dp"
            android:layout_height="78.50dp"
            android:src="@drawable/verse_top_right"
            android:scaleType="centerInside"
            android:alpha="0.3"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        />

        <ImageView
            android:id="@+id/backgroundImage1"
            android:layout_width="78.50dp"
            android:layout_height="78.50dp"
            android:src="@drawable/verse_chakra"
            android:scaleType="centerInside"
            android:alpha="0.4"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

             />

        <ImageView

            android:id="@+id/backgroundImage2"
            android:layout_width="78.50dp"
            android:layout_height="78.50dp"
            android:src="@drawable/verse_bottom_left"
            android:scaleType="centerInside"
            android:alpha="0.4"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

        />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>