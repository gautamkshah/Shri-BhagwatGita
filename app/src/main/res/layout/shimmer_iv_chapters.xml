<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItemView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:elevation="2.60dp"
    android:focusable="true"
    app:cardCornerRadius="6.50dp"
    app:cardUseCompatPadding="true">



        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="6.50dp"
            android:background="@drawable/chapter_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvChapternumber"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"

                        android:background="@drawable/bg_shimmer"
                        android:textColor="@color/splash"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvChaptername"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/bg_shimmer"
                        android:textColor="@color/black"
                         />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivFavoriteFilled"
                        android:layout_width="39.50dp"
                        android:layout_height="39.50dp"
                        android:hapticFeedbackEnabled="true"
                        android:src="@drawable/baseline_favorite_24"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivFavorite"
                        android:layout_width="39.50dp"
                        android:layout_height="39.50dp"
                        android:hapticFeedbackEnabled="true"
                        android:background="@drawable/bg_shimmer"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvChapterdesc"
                android:background="@drawable/bg_shimmer"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="@color/black"
                android:textSize="15.60dp"
                android:layout_marginTop="15.60dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="36.40dp"
                    android:layout_height="36.40dp"
                    app:tint="@color/black"
                    android:background="@drawable/bg_shimmer"/>

                <TextView
                    android:id="@+id/tvVerseNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shimmer"
                    android:layout_marginStart="13dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvVerseCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shimmer"
                    android:layout_marginStart="3.90dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>






</androidx.cardview.widget.CardView>